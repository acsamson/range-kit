{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "incremental": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"]
  },
  "include": ["src"]
}
